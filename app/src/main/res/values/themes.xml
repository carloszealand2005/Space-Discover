<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscoverNasa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>




    <!-- res/values/styles_apod_light.xml -->
    <style name="title_apod">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color_apod</item>
    </style>

    <style name="description_apod">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color_apod</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="date_apod">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/second_color_apod</item>
    </style>

    <style name="copyright_apod">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/second_color_apod</item>
    </style>

    <!-- BotÃ³n reutilizable -->
    <style name="apod_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/apod_button_background</item>
    </style>


    <style name="settings_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="CelestialBodyTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CelestialBodySubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_body</item>
    </style>

    <style name="CelestialBodyDate">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_accent_body</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/searchview_background</item>
        <!-- Opcional: cambia texto y hint -->
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>



</resources>